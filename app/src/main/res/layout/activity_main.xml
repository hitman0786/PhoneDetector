<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <include layout="@layout/app_toolbar"
             android:id="@+id/include2"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/usernameET"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/phoneET"
            app:layout_constraintTop_toBottomOf="@+id/include2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneET"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameET"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:hint="Contact Number"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/emailET"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailET"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneET"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:hint="Email"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/addressET"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:gravity="left"
            android:id="@+id/addressET"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/emailET"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:hint="Address"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/reasonET"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:gravity="left"
            android:id="@+id/reasonET"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/addressET"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:maxLines="10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:hint="Reason for call"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/submitBT"/>
    <Button
            android:text="Submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/submitBT"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/reasonET"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>